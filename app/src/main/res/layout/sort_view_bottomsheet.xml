<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_16dp"
    android:layout_marginRight="@dimen/margin_16dp"
    android:layout_marginTop="@dimen/margin_16dp"
    android:orientation="vertical"
    android:padding="@dimen/padding_16dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_close_bottomsheet"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_close_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:text="Sort By"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_lowtohigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/sort_lh"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_16sp" />


                <RadioButton
                    android:id="@+id/rb_lowtohigh"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:buttonTint="@color/colorAccent" />


            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_hightolow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_16dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/sort_hl"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_16sp" />


                <RadioButton
                    android:id="@+id/rb_hightolow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:buttonTint="@color/colorAccent" />


            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_sort_a_to_z"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_16dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/sort_az"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_16sp" />


                <RadioButton
                    android:id="@+id/rb_sort_a_to_z"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:buttonTint="@color/colorAccent" />


            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_sort_z_to_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_16dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/sort_za"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_16sp" />


                <RadioButton
                    android:id="@+id/rb_sort_z_to_a"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:buttonTint="@color/colorAccent" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
