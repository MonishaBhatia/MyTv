<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_8dp"
    xmlns:tools="http://schemas.android.com/tools">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_12dp"
    android:layout_marginRight="@dimen/margin_12dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_channel_number"
            style="@style/TextViewTvGuide"
            tools:text="100"/>


        <TextView
            android:id="@+id/tv_channel_title"
            style="@style/TextViewTvGuide"
            android:gravity="center"
            tools:text="Astro Hua Hee Dai"
            android:paddingRight="@dimen/padding_8dp"
            android:paddingLeft="@dimen/padding_8dp"/>


    </LinearLayout>

    <include layout="@layout/layout_divider_vertical" />


    <TextView
        android:id="@+id/tv_channel_current_show"
        style="@style/TextViewTvGuide"
        android:textStyle="bold|italic"
        android:layout_marginLeft="@dimen/margin_40dp"
        tools:text="World's No.1 World's No.1 World's No.1"/>

</LinearLayout>

</android.support.v7.widget.CardView>